<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= image_tag @user.image_url(:thumb).to_s %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "мой профиль", @user %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= user.name %><br />
            <%= image_tag user.image_url(:thumb).to_s %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
</div>